<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="130dp"
    android:padding="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mainView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:maxWidth="70dp" >

            <LinearLayout
                android:id="@+id/book_image_sec"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:id="@+id/book_image"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:minHeight="80dp"
                    android:maxHeight="90dp"
                    android:src="@drawable/single_book" />
            </LinearLayout>
            <TextView
                android:id="@+id/request_book_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/red"
                android:padding="2dp"
                android:layout_alignLeft="@+id/book_image_sec"
                android:text="For Sell"
                android:textColor="@color/white"
                android:textSize="11dp"/>
            <TextView
                android:id="@+id/request_book_label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:padding="2dp"
                android:layout_marginTop="2dp"
                android:layout_alignLeft="@+id/book_image_sec"
                android:layout_below="@+id/request_book_label"
                android:text="New"
                android:textColor="@color/white"
                android:textSize="11dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/image_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/book_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxHeight="35dp"
                    android:layout_below="@+id/grid_image"
                    android:layout_marginLeft="10dp"
                    android:text="আন নূরুর রবি‘য়াহ সাইয়্যিদাতুনা হযরত যাহরা আলাইহাস সালাম"
                    android:textColor="@android:color/black"
                    android:textSize="13dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="40dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="৳ "
                            android:layout_marginLeft="10dp"
                            android:textColor="@color/darkerGrey"
                            android:textSize="13dp" />
                        <TextView
                            android:id="@+id/book_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="190.00"
                            android:textColor="@color/darkerGrey"
                            android:textSize="13dp" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Requested to: "
                            android:textColor="@color/darkerGrey"
                            android:textSize="13dp" />
                        <TextView
                            android:id="@+id/book_owner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kamrul Hasan"
                            android:textColor="@color/deep_sky_blue"
                            android:textSize="13dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/before_rent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3" >
                    <LinearLayout
                        android:id="@+id/btn_cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@color/red"
                        android:padding="5dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_baseline_close_white_18"
                            android:layout_marginRight="5dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cancel"
                            android:textColor="@color/white"
                            android:textSize="11dp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/after_rent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:visibility="gone" >
                <LinearLayout
                    android:id="@+id/btn_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@color/colorPrimary"
                    android:padding="5dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_check_white_18"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="End Now"
                        android:textColor="@color/white"
                        android:textSize="11dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Starting Date: "
                        android:textSize="11dp"
                        android:textColor="@color/darkerGrey"/>
                    <TextView
                        android:id="@+id/rent_start_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="13-06-2021"
                        android:textSize="11dp"
                        android:textColor="@color/deep_sky_blue"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
    <ProgressBar
        android:id="@+id/pb_request"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerInParent="true"
        android:visibility="visible" />
</RelativeLayout>